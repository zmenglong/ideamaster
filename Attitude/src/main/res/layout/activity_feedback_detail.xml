<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/include_toolbar_layout"/>
    <gg.attitude.views.MyScrollView
        android:id="@+id/contentSL"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <android.support.v7.widget.CardView
                android:layout_margin="@dimen/margin_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/card_ll"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@color/white"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_normal"
                        android:orientation="horizontal">
                        <gg.attitude.views.CircleImageView
                            android:id="@+id/avatar"
                            android:layout_width="@dimen/avatar_normal_size"
                            android:layout_height="@dimen/avatar_normal_size"
                            android:layout_margin="@dimen/margin_small"
                            android:src="@drawable/loading_avatar"
                            />
                        <TextView
                            android:id="@+id/nickname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/textColor_black_light"
                            android:layout_margin="@dimen/margin_small"
                            android:textStyle="bold"
                            android:text=" "
                            />
                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"/>
                        <gg.attitude.views.CircleImageView
                            android:id="@+id/iv_hasFeedback"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/flag_has_feedback"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:layout_marginRight="@dimen/margin_normal"
                        android:layout_marginBottom="@dimen/margin_normal"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:id="@+id/contentTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_small"
                            android:textColor="@color/textColor_black_light"
                            android:textStyle="bold"
                            android:lineSpacingMultiplier="1.25"
                            android:ellipsize="end"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/margin_small"
                                android:text="A:"/>
                            <TextView
                                android:id="@+id/aDes"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/margin_small"
                                android:gravity="bottom"
                                android:text=""/>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/color_chart_a"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/margin_small"
                                android:text="B:"/>
                            <TextView
                                android:id="@+id/bDes"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/margin_small"
                                android:gravity="bottom"
                                android:text=""/>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/color_chart_b"/>
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:id="@+id/feedback_detail_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:minHeight="240dp"
                android:padding="@dimen/margin_normal"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:padding="@dimen/default_padding_bottom"
                    android:gravity="center">
                    <gg.attitude.views.chart.PieGraph
                        android:id="@+id/graph"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_margin="@dimen/margin_normal"
                        />
                    <LinearLayout
                        android:id="@+id/graph_txt_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/a_contentLL"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:background="@color/color_chart_a"
                                android:layout_margin="@dimen/margin_small"/>
                            <TextView
                                android:id="@+id/aDes_graph"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="A:"
                                android:textColor="@color/color_chart_a"
                                android:textSize="@dimen/txt_size_small"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/b_contentLL"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:background="@color/color_chart_b"
                                android:layout_margin="@dimen/margin_small"/>
                            <TextView
                                android:id="@+id/bDes_graph"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="B:"
                                android:textColor="@color/color_chart_b"
                                android:textSize="@dimen/txt_size_small"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </gg.attitude.views.MyScrollView>
    <include layout="@layout/include_loading_error"/>

</LinearLayout>